---
import { Survey } from "~/components/Survey";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    <style is:global>
      @media (prefers-color-scheme: light) {
        .af-radial-background {
          background: radial-gradient(
            128.52% 128.52% at 50% 50%,
            #ffffff 0%,
            rgba(105, 105, 105, 0.4) 100%
          );
          background-repeat: no-repeat;
        }
      }
      @media (prefers-color-scheme: dark) {
        .af-radial-background {
          background: radial-gradient(
            50% 50% at 50% 50%,
            #353535 0%,
            #161616 100%
          );
          background-repeat: no-repeat;
        }
      }
    </style>
  </head>
  <body class="af-radial-background pt-12 h-screen">
    <div class="flex flex-col space-y-6">
      <div
        class="flex flex-row w-full justify-center text-4xl dark:text-white text-cod-gray"
      >
        <h1>Arguflow</h1>
      </div>
      <div
        class="flex flex-col w-full items-center text-xl space-y-5 pt-4 dark:text-white text-cod-gray underline"
      >
        <a
          class="hover:text-violet-500 focus:text-indigo-500"
          href="https://docs.arguflow.gg/">Read The Docs</a
        >
        <a
          class="hover:text-violet-500 focus:text-indigo-500"
          href="https://cal.com/nick-arguflow/30min"
          >Schedule Meeting With Our CEO</a
        >
        <a
          class="hover:text-violet-500 focus:text-indigo-500"
          href="https://app.arguflow.gg/">Use The Minimally Viable App</a
        >
      </div>
      <div>
        <Survey client:only />
      </div>
    </div>
  </body>
</html>
